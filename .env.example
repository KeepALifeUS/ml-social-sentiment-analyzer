# Environment Configuration для Social Media Sentiment Analyzer
# Скопируйте этот файл в .env и настройте ваши значения

# =============================================================================
# ОБЩИЕ НАСТРОЙКИ
# =============================================================================

# Окружение: development, staging, production
ENVIRONMENT=development

# Debug режим (true/false)
DEBUG=true

# Логирование
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================

# PostgreSQL настройки
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_sentiment
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# КЭШИРОВАНИЕ
# =============================================================================

# Redis настройки
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100

# =============================================================================
# API НАСТРОЙКИ
# =============================================================================

# API сервер
API_HOST=0.0.0.0
API_PORT=8004
WORKERS=4

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================

# JWT токены
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# API ключи
API_KEY_HEADER=X-API-Key

# Rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =============================================================================
# СОЦИАЛЬНЫЕ СЕТИ API
# =============================================================================

# Twitter/X API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USERNAME=your_reddit_username_here
REDDIT_PASSWORD=your_reddit_password_here
REDDIT_USER_AGENT=CryptoSentimentBot/1.0

# Telegram API
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_PHONE=your_phone_number_here
TELEGRAM_SESSION=

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here

# TikTok API (если доступен)
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here

# =============================================================================
# MACHINE LEARNING
# =============================================================================

# ML настройки
ML_DEVICE=auto          # auto, cpu, cuda, mps
ML_BATCH_SIZE=32
ML_MAX_SEQ_LENGTH=512
ML_USE_GPU=true
ML_FP16=false
ML_MODEL_CACHE_DIR=./models

# Ensemble модели (через запятую)
ML_ENSEMBLE_MODELS=cardiffnlp/twitter-roberta-base-sentiment-latest,nlptown/bert-base-multilingual-uncased-sentiment,ProsusAI/finbert

# =============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# =============================================================================

# Real-time processing
REALTIME_BATCH_SIZE=32
REALTIME_MAX_QUEUE_SIZE=1000
REALTIME_TIMEOUT=1.0

# Streaming
STREAM_BUFFER_SIZE=1000
STREAM_BATCH_TIMEOUT=5.0

# =============================================================================
# МОНИТОРИНГ
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090
ENABLE_PROMETHEUS=true

# Tracing
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Health checks
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# KAFKA (для streaming)
# =============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=crypto_sentiment
KAFKA_CONSUMER_GROUP=sentiment_analyzer

# =============================================================================
# РАЗВЕРТЫВАНИЕ
# =============================================================================

# Docker настройки
COMPOSE_PROJECT_NAME=ctb3-sentiment

# Grafana
GRAFANA_PASSWORD=admin123

# pgAdmin
PGADMIN_EMAIL=admin@ctb3.io
PGADMIN_PASSWORD=admin123

# Jupyter
JUPYTER_TOKEN=sentiment123

# =============================================================================
# СПЕЦИФИЧНЫЕ CRYPTO НАСТРОЙКИ
# =============================================================================

# Crypto symbols для отслеживания (через запятую)
CRYPTO_SYMBOLS=BTC,ETH,ADA,SOL,DOT,LINK,UNI,MATIC,AVAX,ATOM

# Crypto subreddits для мониторинга
CRYPTO_SUBREDDITS=CryptoCurrency,Bitcoin,ethereum,cardano,solana

# Crypto Telegram каналы
CRYPTO_TELEGRAM_CHANNELS=@bitcoin,@ethereum,@binance

# Trending настройки
TRENDING_MIN_MENTIONS=10
TRENDING_TIME_WINDOW_HOURS=24
TRENDING_UPDATE_INTERVAL=300

# Sentiment thresholds
SENTIMENT_POSITIVE_THRESHOLD=0.6
SENTIMENT_NEGATIVE_THRESHOLD=0.4
SENTIMENT_CONFIDENCE_THRESHOLD=0.5

# =============================================================================
# ПРИМЕР ЗНАЧЕНИЙ ДЛЯ РАЗРАБОТКИ
# =============================================================================

# Для разработки можно использовать эти тестовые значения:
# DB_PASSWORD=dev_password_123
# JWT_SECRET=dev-jwt-secret-key-not-for-production
# REDIS_PASSWORD=dev_redis_password

# =============================================================================
# ИНСТРУКЦИИ ПО ПОЛУЧЕНИЮ API КЛЮЧЕЙ
# =============================================================================

# Twitter API:
# 1. Идите на https://developer.twitter.com/
# 2. Создайте приложение
# 3. Получите Bearer Token и API ключи

# Reddit API:
# 1. Идите на https://www.reddit.com/prefs/apps
# 2. Создайте "script" приложение
# 3. Получите client_id и client_secret

# Telegram API:
# 1. Идите на https://my.telegram.org/apps
# 2. Создайте приложение
# 3. Получите api_id и api_hash

# Discord Bot:
# 1. Идите на https://discord.com/developers/applications
# 2. Создайте приложение
# 3. Создайте бота и получите токен

# YouTube API:
# 1. Идите в Google Cloud Console
# 2. Включите YouTube Data API v3
# 3. Создайте API ключ

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================

# ВАЖНО: 
# - Никогда не коммитьте .env файл в git
# - Используйте сложные пароли в production
# - Регулярно ротируйте API ключи
# - Ограничьте права доступа к API ключам
# - Используйте HTTPS в production
# - Настройте файрвол для защиты портов